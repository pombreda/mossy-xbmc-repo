<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addons>
<addon id="repository.mossy" name="Mossys Add-ons" version="1.0.5" provider-name="mossy">
	<extension point="xbmc.addon.repository" name="Mossys Add-ons">
		<info compressed="false">http://mossy-xbmc-repo.googlecode.com/git/test/addons.xml</info>
		<checksum>http://mossy-xbmc-repo.googlecode.com/git/test/addons.xml.md5</checksum>
		<datadir zip="true">http://mossy-xbmc-repo.googlecode.com/git/test</datadir>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary>Install add-ons from Mossys add-on repository</summary>
		<description>Home of Irish TV Player &amp; 4oD</description>
		<platform>all</platform>
	</extension>
</addon>

<addon id="plugin.video.irishtv"
       name="Irish TV"
       version="1.0.1"
       provider-name="mossy">
    <requires>
        <import addon="xbmc.python" version="2.0"/>
        <import addon="script.module.pyamf" version="0.6.1"/>
    	<import addon="script.module.beautifulsoup" version="3.2.0"/>
    </requires>
    <extension point="xbmc.python.pluginsource"
               library="default.py">
        <provides>video</provides>
    </extension>
    <extension point="xbmc.addon.metadata">
	<language>en</language>
        <platform>all</platform>
        <summary>Irish TV On Demand</summary>
        <description>Irish TV On Demand. RTE, including live TV, TV3 and AerTV</description>
	<disclaimer>May not work outside Ireland</disclaimer>
    </extension>
</addon>
</addons>
