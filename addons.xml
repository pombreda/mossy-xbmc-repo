<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addons>
<addon id="repository.mossy" name="Mossys Add-ons" version="1.0.5" provider-name="mossy">
    <extension point="xbmc.addon.repository" name="Mossys Add-ons">
        <info compressed="false">http://mossy-xbmc-repo.googlecode.com/git/addons.xml</info>
        <checksum>http://mossy-xbmc-repo.googlecode.com/git/addons.xml.md5</checksum>
        <datadir zip="true">http://mossy-xbmc-repo.googlecode.com/git</datadir>
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary>Install add-ons from Mossys add-on repository</summary>
        <description>Home of Irish TV Player &amp; 4oD</description>
        <platform>all</platform>
    </extension>
</addon>

<addon id="plugin.video.4od"
       name="4oD"
       version="1.8.6"
       provider-name="mossy">
    <requires>
        <import addon="xbmc.python" version="2.0"/>
        <import addon="plugin.video.youtube"/>
    </requires>
    <extension point="xbmc.python.pluginsource"
               library="default.py">
        <provides>video</provides>
    </extension>
    <extension point="xbmc.addon.metadata">
	<broken>Broken for ALL videos, due to changes in the 4oD and Youtube encryption</broken>
	<language>en</language>
        <platform>all</platform>
        <summary>Channel 4 On Demand</summary>
        <description>Channel 4 On Demand</description>
	<disclaimer>You need to login into Youtube in the Youtube pluging in order to wathc some programmes. May not work outside the UK and Ireland</disclaimer>
    </extension>
</addon>

<addon id="plugin.video.irishtv"
       name="Irish TV"
       version="1.0.1"
       provider-name="mossy">
    <requires>
        <import addon="xbmc.python" version="2.0"/>
        <import addon="script.module.pyamf" version="0.6.1"/>
    	<import addon="script.module.beautifulsoup" version="3.2.0"/>
    </requires>
    <extension point="xbmc.python.pluginsource"
               library="default.py">
        <provides>video</provides>
    </extension>
    <extension point="xbmc.addon.metadata">
	<language>en</language>
        <platform>all</platform>
        <summary>Irish TV On Demand</summary>
        <description>Irish TV On Demand. RTE, including live TV, TV3 and AerTV</description>
	<disclaimer>May not work outside Ireland</disclaimer>
    </extension>
</addon>
</addons>
