<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addons>
<addon id="plugin.video.4od"
       name="4oD"
       version="1.0.3"
       provider-name="mossy">
    <requires>
        <import addon="xbmc.python" version="1.0"/>
    </requires>
    <extension point="xbmc.python.pluginsource"
               library="default.py">
        <provides>video</provides>
    </extension>
    <extension point="xbmc.addon.metadata">
        <platform>all</platform>
        <summary>Channel 4 On Demand</summary>
        <description>Channel 4 On Demand</description>
    </extension>
</addon>

<addon id="repository.mossy" 
        name="Mossy's Add-ons" 
        version="1.0.0" 
        provider-name="mossy">
    <extension point="xbmc.addon.repository" 
        name="Mossy's Add-ons">
        <info compressed="false">http://mossy-xbmc-repo.googlecode.com/git/addo$
        <checksum>http://mossy-xbmc-repo.googlecode.com/git/addons.xml.md5</che$
        <datadir zip="true">http://mossy-xbmc-repo.googlecode.com/git</datadir>
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary>Install add-ons from Nibor's add-on repository</summary>
        <description>Download and install XBMC add-ons.</description>
        <disclaimer>If it breaks, you get to keep the pieces</disclaimer>
        <platform>all</platform>
    </extension>
</addons>
