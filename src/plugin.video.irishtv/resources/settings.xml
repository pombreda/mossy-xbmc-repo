<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<settings>		
	<!-- General -->
	<category label="30100">
	 <setting id="select_action" type="labelenum" label="30110" default="30130" lvalues="30120|30130|30140"/>
     <setting id="RTE_descriptions" type="bool" label="30380" default="false"/>
	<!-- <setting id="subtitles" type="bool" label="30160" default="false"/>-->
	</category>

	  <!-- Proxy -->
    <category label="30300">
         <setting id="proxy_method" label="30360" type="enum" values="None|Proxy|IP Forwarding" default="0" />
         <setting id="forward_segment1" label="30362" type="slider" range="1,1,255" enable="eq(-1,2)" default="46" option="int"/>
         <setting id="forward_segment2" label="30363" type="slider" range="0,1,255" enable="eq(-2,2)" default="7" option="int"/>
         <setting type="sep"/>
         <setting id="proxy_type" label="30315" type="enum" values="HTTP|HTTP (Tunneled)|SOCKS4|SOCKS5" enable="eq(-4,1)" default="0" />
         <setting id="proxy_server" label="30320" type="text" default="" enable="eq(-5,1)" />
         <setting id="proxy_port" label="30330" type="number" default="" enable="eq(-6,1)" />
         <setting id="proxy_user" label="30340" type="text" enable="eq(-7,1)"  />
         <setting id="proxy_pass" label="30350" type="text" option="hidden" enable="!eq(-7,2) + eq(-8,1)" />
	</category>

	<!-- Downloads -->
	<category label="30200">
	 <setting id="rtmpdump_path" type="file" label="30210" default=""/>
	 <setting id="download_folder" type="folder" label="30220" default=""/>
	 <setting id="ask_folder" type="bool" label="30230" default="false"/>
	 <setting id="ask_filename" type="bool" label="30240" default="false"/>
	</category>

	<!-- Advanced -->
	<category label="30400">
	
	 <setting id="socket_timeout" type="number" label="30420" default="0"/>
	 <setting id="http_cache_disable" label="30170" type="bool" default="false" />
	</category>
</settings>
