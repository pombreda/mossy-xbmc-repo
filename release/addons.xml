<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addons>
<addon id="plugin.video.vine"
       name="Vine"
       version="2.0.1"
       provider-name="mossy">
    <requires>
        <import addon="script.module.socksipy" version="2.0.0"/>
        <import addon="xbmc.python" version="2.1.0"/>
    </requires>
    <extension point="xbmc.python.pluginsource"
               library="default.py">
        <provides>video</provides>
    </extension>
    <extension point="xbmc.addon.metadata">
	<language>en</language>
        <platform>all</platform>
        <summary>Vine</summary>
        <description>Videos from Twitter. Waste your life, six seconds at a time.</description>
    	<disclaimer>WARNING These videos are not moderated, by using this plugin you are accepting sole responsibility for any and all consequences of said use</disclaimer>
    </extension>
</addon>

<addon id="script.module.socksipy"
       name="SocksiPy"
       version="2.0.0"
       provider-name="Mossy">
  <requires>
    <import addon="xbmc.python"
    		version="2.1.0"/>
  </requires>
  <extension point="xbmc.python.module"
             library="lib" />
  <extension point="xbmc.addon.metadata">
    <summary>A Python SOCKS client module</summary>
    <description>Provides a socket-like interface that supports connections to any TCP service through the use of a SOCKS4, SOCKS5 or HTTP proxy. For usage see http://code.google.com/p/socksipy-branch/</description>
    <license>BSD</license>
    <platform>all</platform>
  </extension>
</addon>

<addon id="plugin.video.4od"
       name="4oD"
       version="4.0.2"
       provider-name="mossy">
    <requires>
        <import addon="script.module.socksipy" version="2.0.0"/>
    	<import addon="script.module.beautifulsoup" version="3.2.0"/>
        <import addon="xbmc.python" version="2.1.0"/>
    </requires>
    <extension point="xbmc.python.pluginsource"
               library="default.py">
        <provides>video</provides>
    </extension>
    <extension point="xbmc.addon.metadata">
        <language>en</language>
        <platform>all</platform>
        <summary>Channel 4 On Demand</summary>
        <description>Channel 4 On Demand</description>
        <disclaimer>May not work outside the UK and Ireland</disclaimer>
        <license>GNU GENERAL PUBLIC LICENSE. Version 3, 29 June 2007</license>
        <forum>http://forum.xbmc.org/showthread.php?tid=134118</forum>
        <website>http://code.google.com/p/mossy-xbmc-repo/</website>
        <source>http://code.google.com/p/plugin-video-4od/source/browse/</source>
    </extension>
</addon>

<addon id="repository.mossy"
        name="Mossy's Frodo Add-ons"
        version="2.0.7"
        provider-name="mossy">
    <extension point="xbmc.addon.repository"
        name="Mossy's Add-ons">
        <info compressed="false">http://mossy-xbmc-repo.googlecode.com/git/release/addons.xml</info>
        <checksum>http://mossy-xbmc-repo.googlecode.com/git/release/addons.xml.md5</checksum>
        <datadir zip="true">http://mossy-xbmc-repo.googlecode.com/git/release</datadir>
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary>Install add-ons from Mossys add-on repository</summary>
        <description>Home of Irish TV Player &amp; 4oD</description>
        <disclaimer>If it breaks, you get to keep the pieces</disclaimer>
        <platform>all</platform>
    </extension>
</addon>

<addon id="plugin.video.irishtv"
       name="Irish TV"
       version="2.1.0"
       provider-name="mossy">
    <requires>
        <import addon="xbmc.python" version="2.1.0"/>
        <import addon="script.module.socksipy" version="2.0.0"/>
        <import addon="script.module.pyamf" version="0.6.1"/>
    	<import addon="script.module.beautifulsoup" version="3.2.0"/>
        <import addon="script.module.requests2" version="2.2.1"/>
    </requires>
    <extension point="xbmc.python.pluginsource"
               library="default.py">
        <provides>video</provides>
    </extension>
    <extension point="xbmc.addon.metadata">
	<language>en</language>
        <platform>all</platform>
        <summary>Irish TV On Demand</summary>
        <description>Catchup with RTE, TV3, TG4 or watch live with AerTV.</description>
        <disclaimer>May not work outside Ireland. AerTV is going subscription only and so will only be available to AerTV Plus and Platinum subscribers (set your login details in the plugin settings).</disclaimer>
        <license>GNU GENERAL PUBLIC LICENSE. Version 3, 29 June 2007</license>
        <forum>http://forum.xbmc.org/showthread.php?tid=152897</forum>
        <website>http://code.google.com/p/mossy-xbmc-repo/</website>
        <source>http://code.google.com/p/plugin-video-irishtv/source/browse/</source>
    </extension>
</addon>
</addons>
